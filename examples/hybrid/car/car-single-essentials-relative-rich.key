\functions{
  R ep;
  R b;
  R A;
}

/* \[t:=0; {x'=v, v'=A, t'=1, t<=ep}\]\[{x'=v, v' = -b}\] (x <= m) */

\problem {
  \[ R a, v, x, t, m; \] (
    ( b > 0 & A>=0 & v>=0 & \[{x'=v, v' = -b}\] (x <= m))
  -> 
   \[(
    ((a:= -b) ++ (?x>10000; a:=A));
    (t:=0; {x'=v, v' = a, t'=1, (v >= 0 & t <= ep)})
    )*@invariant(v^2<=2*b*(m-x))\] (x <= m)
  )
}
