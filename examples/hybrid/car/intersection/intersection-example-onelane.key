\programVariables {
 R x, xI, I1, v, a, V, B, A, ep, t;
}
/** This is a problem file for the Single Lane Control Model.  It 
 * verifies that the car never enters the intersection on a red 
 * light.
 *
 * Red    I = 2
 * Yellow I = 1
 * Green  I = 0
 * @see "Sarah M. Loos and Andr√© Platzer. Safe intersections: At the crossing of hybrid systems and verification. In Kyongsu Yi, editor, 14th International IEEE Conference on Intelligent Transportation Systems, ITSC'11, Washington, DC, USA, Proceedings. 2011."
 ***/


\problem {
    I1 = 2 & (xI < x | xI > x + v^2/(2*B))
    & B > 0 
    & v>=0 
    & v<=V
    & A>=0 
    & V > 0
    & ep>0
   -> \[(
    ((?(I1 = 0); I1 := 1)
    ++ (?(I1 = 1 & (xI < x | xI > x + v^2/(2*B) + (A/B + 1)*(A/2*ep^2 + ep*v))); I1 := 2)
    ++ (?(I1 = 2); I1 := 0)
    ++ ?true);
    ((?(I1 = 0 | xI = x);
        a := A)
    ++
     (?(v=0 & !xI = x);
        a := 0)
    ++
     (?(v=V & (I1 = 0 | xI = x));
        a := 0)
    ++
        a := -B
    ); 
    (t:=0;{x'=v,v'=a, t'=1, (v>=0 & v<=V & t<=ep)})
   )*@invariant(v >=0 & v <= V & (!I1 = 2 | xI < x | xI > x + v^2/(2*B)))
   \] !((xI = x) & (I1 = 2))
}

