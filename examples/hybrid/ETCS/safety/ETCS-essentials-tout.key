/**
 * Essentials of European Train Control System (ETCS)
 * @provable
 * @see "Andr√© Platzer. Logical Analysis of Hybrid Systems: Proving Theorems for Complex Dynamics. Springer, 2010."
 */
\functions{
  R ep;
  R b;
  R A;
}

\programVariables {
  R SB, a, v, z, t, m;
}

\problem {
    ( v^2 <= 2*b*(m-z) & b > 0 & A>=0)
  -> 
   \[[(
    SB := (v^2)/(2*b) + ((A/b) + 1)*((A/2)*ep^2 + ep*v);
    ((?m - z <= SB; a:= -b) ++ (?m - z >= SB; a:=A));
    (t:=0; {z'=v, v' = a, t'=1, (v >= 0 & t <= ep)})
    )*@invariant(v^2<=2*b*(m-z))
    \]] (z <= m)
}
