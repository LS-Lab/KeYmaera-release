\programVariables {
R x,y,C;
}

/*
* Continuous fragment of the Example SimpleHS taken from Ashish Tiwari "HybridSAL Relational Abstracter"
* http://www.csl.sri.com/users/tiwari/relational-abstraction/hsal-tool-paper.pdf
*/
\problem {
	\[ x:= 1; y:=*; ?y <= 2; C:=-x^2-2*x*y+y^2; {x'=-y+x, y'=-y-x, y>=0}@invariant(-x^2-2*x*y+y^2=C) \] (x >= 0 )
}
