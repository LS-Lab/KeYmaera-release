/**
 * Hybrid bouncing ball example.
 * h = height
 * v = velocity
 * H = height limit
 * g = gravitation
 * c = elastic dampening factor at floor (h=0)
 * not sufficient: @invariant(0<=h&h<=H&v^2=2/3*(H-h)*g)
 */

\problem {
  \[ R h,v,t; R c,g,H,V\] (
    0<=h&h=H &v=0
    /*h<=H-5*t^2-v*t&h>=0&t>=0&v>=-10*t&t<=H/5 */
    /*h<=H-5*t^2+v*t&h>=0&t>=0&v>=-10*t&t^2<=H/5*/
  ->
   \[t:=0;
    (
      {h`=v,v`=-10,t`=1, h>=0};
      if (t>0&h=0) then
        v := -v/2; t:=0
      fi
    )*\] (0<=h&h<=H)
  )
}
