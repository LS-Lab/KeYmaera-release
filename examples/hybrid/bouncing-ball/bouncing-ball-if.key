\programVariables {
  R h,v,t;
  R c,g,d,H;
}
/**
 * Hybrid bouncing ball example.
 * h = height
 * v = velocity
 * H = height limit
 * g = gravitation
 * c = elastic dampening factor at floor (h=0)
 * @provable
 * time has been removed, because not necessary for the property
 */
\problem {
  \[ g:=1; c:=1/2 \] (
    (g>0 & h>=0&v^2<=2*g*(H-h)&H>=0 &(0<=c&c<1))
  ->
   \[
    (
      {h'=v,v'=-g,h>=0};
      if (h=0) then
          v := -c*v
      fi
    )*@invariant(v^2<=2*g*(H-h)&h>=0)
   \] (0<=h&h<=H)
  )
}
