
\functions{
R Sqrt(R);
}
/**
 * Hybrid bouncing ball example.
 * h = height
 * v = velocity
 * H = height limit
 * g = gravitation
 * c = elastic dampening factor at floor (h=0)
 * provable
 * additional invariant(&t<=2*V/g)
 */
\problem {
  \[ R h,v,t; R c,g,H\] (
    (g>0 & h>=0&t>=0&v^2<=2*g*(H-h)&H>=0)
  ->
   \[
    (
      {h'=v,v'=-g,t'=1, h>=0};
      if (t>0&h=0) then
      	c:=*; ?(0<=c&c<1);
        v := -c*v; t:=0
      fi
    )*@invariant(v^2<=2*g*(H-h)&h>=0)
   \] (0<=h&h<=H)
  )
}
