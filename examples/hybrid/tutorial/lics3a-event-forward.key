\programVariables {
	R x, v, a, b, A, m;
}

/**
 * @provable
 * Variable Definitions:
 * x position of car
 * v velocity of car
 * a acceleration of car
 * A max acceleration 
 * b max braking 
 * m position of Stop Sign
 */

\problem {
    (  v >= 0  
	 & A >= 0
	 & b > 0 )
->
  \[
    (
	  ((?(m-x>=2); a := A)
	  ++ a := -b);
      {x' = v, v' = a, v >= 0}
    )*/*@invariant(v >= 0)*/
  \] (v >= 0)
}

