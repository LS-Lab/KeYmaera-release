/**
 * Strange modification of Zuse's sqrt
 */
\problem {
  \[ R r, a, p, q, err;
     r:=a-1; q:=1; p:=1/2;
     while (2*p*r >= err)
       if (2*r - 2*q*p >= 0) then
         r:=2*r-2*q-p; q:=q+p; p:=p/2
       else
         r:=2*r; p:=p/2
       fi
     end
     @invariant(a = q^2+2*p*r)
     \] true
}